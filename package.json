{
  "name": "baseTrip",
  "version": "1.0.0",
  "description": "",
  "main": "client/index.js",
  "scripts": {
    "start": "node server/index",
    "heroku-postbuild": "npm run build",
    "test": "mocha --compilers js:babel-register test/**/*.js*",
    "mkdir": "mkdir -p build/css && mkdir -p build/fonts",
    "clean": "rm -rf build",
    "build": "npm run clean && npm run mkdir && npm run build:html && npm run build:js",
    "serve": "nodemon server/index",
    "watch": "npm run watch:html & npm run watch:js",
    "watch:html": "npm run build:html && chokidar index.html -c 'npm run build:html'",
    "build:html": "npm run clean:html && cp index.html build/",
    "clean:html": "rm -f build/index.html",
    "watch:js": "npm run build:js && webpack --watch",
    "build:js": "npm run clean:js && webpack",
    "clean:js": "rm -f build/$npm_package_name.$npm_package_version.js build/$npm_package_name.$npm_package_version.js.map",
    "dev": "npm run watch & npm run serve"
  },
  "engines": {
    "node": "7.6.0",
    "npm": "4.1.2"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.15.2",
    "express": "^4.14.0",
    "isomorphic-fetch": "^2.2.1",
    "jquery": "^3.1.1",
    "node-geocoder": "^3.16.0",
    "react": "^15.3.1",
    "react-addons-update": "^15.4.2",
    "react-dom": "^15.3.1",
    "react-picture-show": "^1.4.0",
    "react-redux": "^4.4.5",
    "react-router": "^2.8.1",
    "react-slick": "^0.14.6",
    "react-star-rating": "^1.4.2",
    "redux": "^3.6.0",
    "redux-thunk": "^2.1.0",
    "unirest": "^0.5.1"
  },
  "devDependencies": {
    "babel-core": "^6.11.4",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "babel-register": "^6.9.0",
    "chokidar-cli": "^1.2.0",
    "css-loader": "^0.25.0",
    "nodemon": "^1.10.2",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.1"
  }
}
